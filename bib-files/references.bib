	pages = {473--497},
	file = {Full Text PDF:C\:\\Users\\Stefan Vermeent\\Zotero\\storage\\9BAQUZP8\\Frankenhuis and Amir - 2022 - What is the expected human childhood Insights from evolutionary anthropology.pdf:application/pdf},
